{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/thumbnail/list.css') }}"/>
{% endblock %}

{% block body %}
    <section>
        <h1>Liste des vignettes</h1>

        {% for flashMessage in app.session.flashBag.get('error') %}
            {{ flashMessage }}
        {% endfor %}

        <nav>
            <ul>
                {% for letter in 'a' .. 'z' %}
                    <li>
                        {% if thumbnailsLetters[letter] %}
                            <a href="{{ path('thumbnails_list', {'id': letter}) }}">{{ letter | upper }}</a>
                        {% else %}
                            <p>{{ letter | upper }}</p>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </nav>

        <table>
            <thead>
            <tr>
                <td>Vignette</td>
                <td>Nom</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for thumbnail in thumbnails.entities %}
                <tr>
                    <td>
                        <img src="{{ asset('pic/' ~ thumbnail.slug ~ '.' ~ thumbnail.extension) }}"
                             alt="{{ thumbnail.name }}">
                    </td>
                    <td>{{ thumbnail.name }}</td>
                    <td>
                        <a href="#" class="material-icons">edit</a>
                        <a href="#" class="material-icons">delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}

{% block javascripts %}

{% endblock %}
